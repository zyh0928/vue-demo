{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "#/*": ["src/store/*"],
      "$/*": ["src/service/*"],
      "@/*": ["src/*"],
      "~/*": ["src/assets/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src", "types"],
  "references": [{ "path": "tsconfig.node.json" }]
}
