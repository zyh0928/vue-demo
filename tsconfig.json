{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "#/*": ["src/store/*"],
      "$/*": ["src/service/*"],
      "%/*": ["src/pages/*"],
      "@/*": ["src/*"],
      "@@/*": ["./*"],
      "~/*": ["src/assets/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": ["src", "@types"],
  "references": [{ "path": "tsconfig.node.json" }]
}
